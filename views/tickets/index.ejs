

<%- include('../partials/newNav') %>
<link rel="stylesheet" href="stylesheets/indexstyle.css"/>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<a href="tickets/comments"> comments</a>
<div class="card-conttainer"> 
<% tickets.forEach((ticket)=>{ %>
  <div class="card" style="width: 18rem;" id="cards">
    <div class="card-body">
      <h3 class="card-title">AssingedTo:<%= ticket.assingedTo %></h5>
      <h6 class="time"><%= ticket.createdAt.toLocaleDateString()%></h5>
      <h6 clas="problem">Problem type: <%= ticket.problems %> </h5>
      <h6 class="Severity"><%= ticket.severity %> </h5>
      <h9 class="ID">ID <%= ticket._id  %> </h5>
      <p class="card-text"><%= ticket.details  %></p>
      <a href="/tickets/<%= ticket._id %>" class="card-link"> Detail</a> </a>
      <a href="/tickets/<%= ticket._id %>/edit" class="card-link"> edit</a>
      <a href="/tickets/<%= ticket._id %>/comments"> comments</a>
      <h5 class="deleteButton">
    <% if(ticket.owner._id.toString() === user.profile._id.toString()) { %> 
      <form action="/tickets/<%=ticket._id%>?_method=DELETE" method="POST">
      <button class="btn btn-warning">Delete</button></form>
    <%} %>
    </h5>
    </div>
  </div>
<% }) %>
</div>


