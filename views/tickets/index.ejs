<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.6.1/css/bootstrap-grid.min.css" integrity="sha512-Xj2sd25G+JgJYwo0cvlGWXoUekbLg5WvW+VbItCMdXrDoZRWcS/d40ieFHu77vP0dF5PK+cX6TIp+DsPfZomhw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<main> 
<%= title %>
<h1>this is the tickets page</h1> 
<a href="/tickets/new">new</a>


<% tickets.forEach((ticket)=>{ %>

<div class="card" style="width: 18rem;">

  <div class="card-body">

    <h5 class="card-title">AssingedTo:<%= ticket.assingedTo %></h5>

    <h5 class="time"><%= ticket.createdAt.toLocaleDateString()%></h5>

    <h5 clas="problem"> <%= ticket.problems %> </h5>

    <h5 class="Severity"><%= ticket.severity %> </h5>
    
    <p class="card-text"><%= ticket.details  %></p>

    <a href="#" class="card-link">Card link</a>

    <a href="#" class="card-link">Another link</a>
  </div>
</div>
<table>
    <thead> 
      <tr>
        <th>assingedTo</th>
        <th>details</th>
        <th>Problems</th>
        <th>Severity</th>
        <th>ID</th>
        <th>date</th>
        <th>detail</th>
      </tr>
    </thead>
    <tr>
      
        <td><%= ticket.assingedTo %> </td>
        <td><%= ticket.details  %> </td>
        <td><%= ticket.problems %> </td>  
        <td><%= ticket.severity %> </td>
        <td><%= ticket._id  %> </td>
        <td><%= ticket.createdAt.toLocaleDateString()%> </td>
        <td>  <a href="/tickets/<%= ticket._id %>">detail</td>
          <td><a href="/tickets/<%= ticket._id %>/edit">edit </a></td>
          <% if(ticket.owner._id.toString() === user.profile._id.toString()) { %> 
            <td><form action="/tickets/<%=ticket._id%>?_method=DELETE" method="POST">
            <button>X</button></form></td>
          <%} %>
    </tr>
      <% }) %>
      
</table>

</main>
<script src="app.js"></script>












