<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/edit.css">
<link rel="stylesheet" href="/stylesheets/newNav.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<%- include('../partials/newNav') %>

<div class="container-create">  
  <div class="title"> 
    <h1>Edit Ticket</h1>
  </div>

  <form action="/tickets/<%= ticket._id %>?_method=PUT" method="POST" class="add-ticketform" >
    <div class="assingedTo"> 
      <label>Assigned to </label>
      <input type="text" name="assingedTo"  value="<%=ticket.assingedTo%>" required>
    </div>
    <div class="detail-create"> 
      <label>details </label>
      <input type="text" name="details" required value="<%=ticket.details%>" required>
    </div>
    <div class="severity"> 
    <label>Severity</label>
    <select class="form-select"id="severity" aria-label="Default select example" name="severity"  required >
      <option value=""selected disable hidden><%=ticket.severity %>  </option>
      <option value="Urgent"> Urgent</option>
      <option value="High"> High </option>
      <option value="Normal"> Normal </option>
      <option value="Low"> Low </option>
    </select>
    </div>
    <div class="problem"> 
    <label>Problem</label>
      <select class="form-select"id="severity" aria-label="Default select example" name="problems"  required >
        <option value=""selected disable hidden><%=ticket.problems %>  </option>
      <option value="Software">Software</option>
      <option value="Hardware">Hardware</option>
    </select>
    </div>
    <div class="add-button">  
    <% if(user){ %>
      <button type="submit" class="btn btn-primary" >Edit Ticket</button>
    <% } %> 
    </div>
  </form>
</div>  
