<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/edit.css">
<link rel="stylesheet" href="/stylesheets/newNav.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="/stylesheets/newNav.css">
<link rel="stylesheet" href="/stylesheets/details.css">
<%- include('../partials/newNav') %>

<div class="details"> 
<% if (ticket.owner.avatar) { %>
  <div class="img-detail">
    <img src="<%= ticket.owner.avatar %>"/>
    <div class="req-assi">
      <h1>Request Made By: <%= ticket.owner.name %></h1>
      <h1>Assigned To: <%= ticket.assingedTo %></h1>
      <h1><%= ticket.createdAt.toLocaleDateString()%> </h1>
    </div>
  </div>
  <% } %>
<div class="severity-problem">
  <h1>Severity: <%= ticket.severity %></h1>
  <h1>Problem: <%= ticket.problems %></h1>
</div>
<div class="detail-ticket">
  <div class="detail-issue">
  <h1>Issue</h1>
</div>
<h1> <%= ticket.details  %></h1>
</div>
</div>
<div class="comment" > 
<div class="add-answer">  
<form method="POST" action="/tickets/<%=ticket._id%>/comments"> 
    <input type="text" name="answer" placeholder=" comments"  class="commnet-text " required> 
    <button type="submit" class="btn btn-success" id="btn-comments"> add</button>
</form>
</div>
  
  <% ticket.comments.forEach(function(comment) { %>
    <div class="card"   id="button-card">
      <div class="card-body">
        <div class="card-title">
          <p> <%= comment.owner %></p>
          <p> <%= ticket.createdAt.toLocaleDateString()%></p>
        </div>
        <p class="card-text"><%= comment.answer %></p>
      </div>
    </div>
    <%}) %> 
</div>






