<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/edit.css">
<link rel="stylesheet" href="/stylesheets/newNav.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" href="/stylesheets/newNav.css">
<link rel="stylesheet" href="/stylesheets/details.css">
<%- include('../partials/newNav') %>
<div class="details"> 
<% if (ticket.owner.avatar) { %>
  <div>
    <h1>request made by<%= ticket.owner.name %></h1>
    <img src="<%= ticket.owner.avatar %>"/>
  </div>
<% } %>
<h1>assineged to</h1>
<h1><%= ticket.assingedTo %></h1>
<h1>Full Detail</h1>
<h1> <%= ticket.details  %></h1>
<h1>Problems</h1>
<h1><%= ticket.problems %></h1>
<h1>Severity</h1>
<h1><%= ticket.severity %></h1>
<h1>TICKET_ID</h1>
<h1><%= ticket._id  %></h1>
<h1>time</h1>
<td><%= ticket.createdAt.toLocaleDateString()%> </td>
</div>
<div class="comment" > 

<% ticket.comments.forEach(function(comment) { %>
  <div class="main-conments">
    <div class="card" id="card-comment">
      <div class="card-header"> 
      <p><%= comment.owner %><p>
      <p><%= ticket.createdAt.toLocaleDateString()%></p>
      </div>
      <div class="card-body">
        <p class="card-text"><%= comment.answer %></p>
      </div>
      <div class="delete-answer"> 
        <% if(ticket.owner._id.toString() === user.profile._id.toString()) { %> 
          <form action="/tickets/<%= comment._id %>/?_method=DELETE" method="POST">
          <button  action=submit class="button">Delete</button>
        </form>
        <%} %>
      </div>
    </div> 
  </div>
<%}) %> 
<div class="add-answer">  
<form method="POST" action="/tickets/<%=ticket._id%>/comments"> 
    <input type="text" name="answer" placeholder=" comments" required> 
    <button type="submit"> add</button>
</form>
</div>
</div>


