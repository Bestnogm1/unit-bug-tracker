<%- include('../partials/newNav') %>

<link rel="stylesheet" href="/stylesheets/reviews.css">

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<div class="reviews-class"> 
      <h1 class="add-a-review"> Add A Review</h1>
      <form method="POST" action="/reviews"> 
            <select  name="rating" >
      <option value="5">5</option>
      <option value="4">4</option>
      <option value="3">3</option>
      <option value="2">2</option>
      <option value="1">1</option>
    </select>
        <input type="text" name="reviews" placeholder=" " required> 
        <button type="submit" class="btn btn-primary">Primary</button>
    </form>
    <% reviews.forEach(function(review) { %>
 
  <div class="inside-card">  
  <div class="card">
    <div class="card-header">
      <%= review.owner %>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= review.rating %> </h5>
      <div class="date-text"> 
      <p class="card-text"><%= review.reviews %></p>
      <p class="time"> <%=review.createdAt.toLocaleDateString()%></p>
      </div>
    </div>
  </div> 
</div>
  <%}) %> 
</div>