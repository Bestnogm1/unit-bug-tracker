<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/edit.css">
<link rel="stylesheet" href="/stylesheets/newNav.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<%- include('../partials/newNav') %>

<link rel="stylesheet" href="/stylesheets/newNav.css">



<div 
      class="row row-cols-2 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g1 px-4"
    >
      <% profiles.forEach(profile => { %>
        <div class="col">
          <a class="text-decoration-none" href="/profiles/<%= profile._id %>">
            <div class="card mb-4 shadow-sm">
              <% if (profile.avatar) { %>
                <img
                  
                  src="<%= profile.avatar %>"
                  alt="<%= profile.name %>'s avatar"
                  width="100%"
                  
                />
              <% } else {%>
                <img
                  
                  src="/images/icons/user.png"
                  alt="A placeholder avatar"
                  width="100%"
                />
            <% } %>
              <div class="card-body">
                <p class="card-title fs-3 text-dark"><%= profile.name %></p>
              </div>
            </div>
          </a>
        </div>
      <% }) %>
    </div>